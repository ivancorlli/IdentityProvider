@page "/ForgotPassword"
@using IdentityProvider.Pages;
@model RecoveryModel
@{
	ViewData["Title"] = "Forgot password";
}
<div class="vh-100 row justify-content-center align-items-center">
	<div class="col col-md-4 justify-content-center">
		<span class="fs-3">Ingresa tu email</span>
		<div class="row my-2">
			<div>
				<form method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="form-floating mb-3">
						<input asp-for="Recovery.Email" class="form-control" autocomplete="username"
	   						aria-required="true" placeholder="name@example.com" />
						<label asp-for="Recovery.Email" class="form-label"></label>
						<span asp-validation-for="Recovery.Email" class="text-danger"></span>
					</div>
					<div>
						<button type="submit" class="btn btn-primary btn-block">Recuperar Contraseña</button>
					</div>
				</form>
			</div>
		</div>
		<div class="row my-3 justify-content-center align-items-center text-center ">
			<div class="col-3 flex-grow-1">
				<div class="border border-bottom-1 border-gray"></div>
			</div>
			<div class="col-1">
				<label class=""></label>
			</div>
			<div class="col-3 flex-grow-1">
				<div class="border border-bottom-1 border-gray"></div>
			</div>
		</div>

		<div class="row my-3 justify-content-center text-center">
			<span class="fw-bold fs-5">Ya tienes cuenta ?</span>
		</div>
		<form class="row my-3 justify-content-center" method="post" asp-page-handler="ToSignUp"
			asp-route-url="@Model.ReturnUrl">
			<div class="col w-100">
				<button class="w-100 btn btn-outline-secondary custom-btn fw-normal rounded-pill" type="submit">Iniciar
					Sesion</button>
			</div>
		</form>
	</div>
</div>
