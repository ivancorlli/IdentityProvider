@page "/ForgotPassword"
@using IdentityProvider.Pages;
@model RecoveryModel
@{
	ViewData["Title"] = "Forgot password";
}
<div class="vh-100 row justify-content-center align-items-center">
	<div class="col col-md-4 justify-content-center">
		<span class="fs-3">Ingresa tu email</span>
		<div class="row">
			<div>
				<form method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					<div class="form-floating mb-3">
						<input asp-for="Recovery.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
						<label asp-for="Recovery.Email" class="form-label"></label>
						<span asp-validation-for="Recovery.Email" class="text-danger"></span>
					</div>
					<button type="submit" class="w-100 btn btn-lg btn-primary">Recuperar Contraseña</button>
				</form>
			</div>
		</div>
		<form class="row my-3 justify-content-center" method="post" asp-page-handler="ToSignUp">
			<div class="col w-100">
				<button class="w-100 btn btn-outline-secondary" type="submit">Iniciar Sesion</button>
			</div>
		</form>
	</div>
</div>
