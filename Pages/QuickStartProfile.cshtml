@page "/QuickStartProfile"
@model IdentityProvider.Pages.QuickStartProfile
@{
    ViewData["Title"] = "Configurar perfil";
}

<div class="vh-100 row justify-content-center align-items-center">
    <div class="col col-md-4 justify-content-center">
        @{
            if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Error
                </div>
            }
        }
        <div class="row my-2">
            <form method="post" enctype="multipart/form-data" class="picture-container my-3">
                <div class="picture">
                    <img src=""
                        class="picture-src" id="wizardPicturePreview" title="">
                    <input type="file" id="wizard-picture">
                </div>
            </form>
            <form method="post" class="my-3">
                <div class="form-floating">
                    <input asp-for="Profile.UserName" class="form-control" autocomplete="username" aria-required="true"
                        type="text" />
                    <label asp-for="Profile.UserName" class="form-label"></label>
                </div>
                <div class="form-floating my-3">
                    <input asp-for="Profile.PhoneNumber" class="form-control" autocomplete="tel" aria-required="true"
                        type="tel" />
                    <label asp-for="Profile.PhoneNumber" class="form-label"></label>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-block">Continuar</button>
                </div>
            </form>

        </div>
    </div>
</div>