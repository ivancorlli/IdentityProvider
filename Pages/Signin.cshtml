@page "/signin"
@using IdentityProvider.Pages;
@model SignInModel
@{
	ViewData["Title"] = "Iniciar Sesion";
}

<div class="h-100 w-100 d-flex flex-column align-items-center justify-content-center">

	<div class="row w-100 justify-content-center">
		<div class="col-md-6 col-lg-5">

			<form class="row my-2 justify-content-center" method="post" asp-page-handler="ToSignUp">
				<div>
					<button class="w-100 btn btn-primary rounded-pill" type="submit">Continuar con facebook</button>
				</div>
			</form>
			<form class="row my-2 justify-content-center" method="post" asp-page-handler="ToSignUp">
				<div>
					<button class="w-100 btn btn-dark rounded-pill" type="submit">Continuar con apple</button>
				</div>
			</form>
			<form class="row justify-content-center" method="post" asp-page-handler="ToSignUp">
				<div>
					<button class="w-100 btn btn-outline-secondary rounded-pill" type="submit">Continuar con google</button>
				</div>
			</form>
			<div class="row my-3 justify-content-center align-items-center text-center">
				<div class="col-3 flex-grow-1">
					<div class="border border-bottom-1 border-light"></div>
				</div>
				<div class="col-1">
					<label class="form-label text-light">O</label>
				</div>
				<div class="col-3 flex-grow-1">
					<div class="border border-bottom-1 border-light"></div>
				</div>
			</div>

			<div class="login-form">
				<span class="fs-3">Iniciar Sesion</span>
				<div class="p-0 w-100 login-form">
					<form method="post">
						@{
							if (!string.IsNullOrEmpty(Model.Error))
							{
								<div class="alert alert-danger" role="alert">
									@Model.Error
								</div>
							}
						}
						<div class="form-floating mb-3">
							<input type="email" asp-for="Login.Email" class="form-control" autocomplete="on" aria-required="true"/>
							<label asp-for="Login.Email" class="form-label"></label>
							<span asp-validation-for="Login.Email" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Login.Password" class="form-control" aria-required="true"/>
							<label asp-for="Login.Password" class="form-label"></label>
							<span asp-validation-for="Login.Password" class="text-danger"></span>
							<div>
								<a href="/ForgotPassword" class="text-black custom-link text-end ">Olvidaste tu contraseña?</a>
							</div>
						</div>
						<div class="w-100 d-flex justify-content-between align-items-center">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
								<label class="form-check-label" for="flexCheckDefault">
									Recordarme
								</label>
							</div>
							<button type="submit" class="btn btn-primary btn-block">Iniciar Sesion</button>
						</div>
					</form>
				</div>
			</div>

			<div class="row mt-4 mb-4 justify-content-center align-items-center text-center">
				<div class="col flex-grow-1">
					<div class="border border-bottom-1 border-light"></div>
				</div>
			</div>

			<div class="row mb-1 justify-content-center text-center">
				<span class="fw-bold fs-5">No tienes cuenta?</span>
			</div>
			<form class="row justify-content-center" method="post" asp-page-handler="ToSignUp" asp-route-url="@Model.ReturnUrl">
				<div>
					<button class="w-100 btn btn-outline-secondary rounded-pill" type="submit">Registrarse</button>
				</div>
			</form>
		</div>
	</div>
</div>
