@page "/ConfirmEmail"
@using IdentityProvider.Pages;
@model ConfirmEmailModel
@{
	ViewData["Title"] = "Confirmar cuenta";
}

<div class="vh-100 h-100">
	<div class="h-100 row align-items-center justify-content-center">
		<div class="col col-md-6">
			@{
				if (!string.IsNullOrEmpty(Model.StatusMessage))
				{

					<div class="row">
						<div class="alert alert-success" role="alert">
							@Model.StatusMessage
						</div>
					</div>
				}

				if (!string.IsNullOrEmpty(Model.ErrorMessage))
				{
					<div class="row">
						<div class="alert alert-danger" role="alert">
							@Model.ErrorMessage
						</div>
					</div>
				}
			}
			<div class="d-flex w-100 justify-content-between">
				<form class="" method="post" asp-page-handler="ToSignIn" asp-route-url="@Model.ReturnUrl">
					<button class="btn btn-outline-secondary custom-btn fw-normal rounded-pill" type="submit">Iniciar sesión</button>
				</form>
				@{
					if (Model.Resend)
					{
						<form class="" method="post" asp-page-handler="ToResend" asp-route-url="@Model.ReturnUrl" asp-route-id="@Model.UserId">
							<button class="btn btn-outline-warning fw-normal rounded-pill" type="submit">Solicitar verificación</button>
						</form>
					}
				}
			</div>
		</div>
	</div>
</div>
