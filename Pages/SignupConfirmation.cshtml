@page "/SignupConfirmation"
@using IdentityProvider.Pages;
@model ConfirmationModel
@{
	ViewData["title"] = "Confirmacion de registro";
}
<div class="vh-100 h-100">
	<div class="row h-100 align-items-center justify-content-center">

		<div class="col col-md-6">
			<div class="row">
				<div class="alert alert-warning" role="alert">
					Por favor revisa tu correo para verificar tu cuenta.
				</div>
			</div>
			<div class="row my-3 ">

				<form class="justify-content-center" method="post" asp-page-handler="ToSignIn"
					asp-route-url="@Model.ReturnUrl">
					<button class="btn btn-outline-secondary custom-btn fw-normal rounded-pill" type="submit">Iniciar
						Sesión</button>
				</form>
			</div>
		</div>
	</div>
</div>
