@page
@using IdentityProvider.Pages;
@model ResetPasswordModel
@{
    ViewData["Title"] = "Cambiar Contrseña";
}


<div class="h-100">
    <div class="row h-100 align-items-center justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h2>Cambiar Contrseña</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Reset.Password" class="form-control" autocomplete="new-password"
                        aria-required="true" placeholder="Please enter your password." />
                    <label asp-for="Reset.Password" class="form-label"></label>
                    <span asp-validation-for="Reset.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Reset.ConfirmPassword" class="form-control" autocomplete="new-password"
                        aria-required="true" placeholder="Please confirm your password." />
                    <label asp-for="Reset.ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="Reset.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit"
                    class="btn btn-primary fw-normal rounded-pill">Actualizar</button>
            </form>

            <div class="row my-3 justify-content-center align-items-center text-center ">
                <div class="col-3 flex-grow-1">
                    <div class="border border-bottom-1 border-gray"></div>
                </div>
                <div class="col-1 m-0 p-0">
                    <label class=""></label>
                </div>
                <div class="col-3 flex-grow-1">
                    <div class="border border-bottom-1 border-gray"></div>
                </div>
            </div>

            <div class="row my-3 justify-content-center text-center">
                <span class="fw-bold fs-5">Ya tienes cuenta ?</span>
            </div>
            <form class="row my-3 justify-content-center" method="post" asp-page-handler="ToSignIn"
                asp-route-url="@Model.ReturnUrl">
                <button class="btn btn-outline-secondary custom-btn fw-normal rounded-pill" type="submit">Iniciar
                    Sesion</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}