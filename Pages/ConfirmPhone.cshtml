@page "/ConfirmPhone"
@model IdentityProvider.Pages.ConfirmPhone
@{
    ViewData["Title"] = "Confirmar número de telefono";
}

<div class="vh-100 row justify-content-center align-items-center">
    <div class="col col-md-4 justify-content-center">
        <span class="fs-3 my-2">@Model.AllowTitle</span>
        @{
            if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Error
                </div>
            }
        }
        @{
            if (!Model.AllowChange)
            {
                <div class="row my-2">
                    <form method="post" class="my-3">
                        <div class="form-floating">
                            <input asp-for="Code" class="form-control" autocomplete="on" aria-required="true" type="text" />
                            <label asp-for="Code" class="form-label"></label>
                        </div>
                        <div class="w-100 d-flex justify-content-between align-items-center">
                            <div class="my-2">
                                <button type="submit" class="btn btn-primary btn-block">Confirmar</button>
                            </div>
                            <form asp-page-handler="ToAllowChange" asp-route-url="@Model.ReturnUrl" method="post">
                                <button type="submit" asp-page-handler="ToAllowChange"
                                class="btn btn-outline-dark btn-block ">Otro número?</button>
                            </form>
                        </div>
                    </form>

                </div>
            }
            else
            {
                <div class="row my-2">
                    <form method="post" class="my-3" asp-page-handler="ToChangePhone">
                        <div class="form-floating">
                            <input asp-for="Code" class="form-control" autocomplete="on" aria-required="true" type="text" />
                            <label asp-for="Code" class="form-label"></label>
                        </div>
                        <div class="w-100 d-flex justify-content-between align-items-center">
                            <div class="my-2">
                                <button type="submit" class="btn btn-primary btn-block"
                            asp-page-handler="ToChangePhone">Actualizar</button>
                            </div>
                            <form asp-page-handler="ToCancel" method="post">
                                @{
                                    <button type="submit" asp-page-handler="ToCancel"
                                class="btn btn-outline-dark btn-block ">Cancelar</button>
                                }
                            </form>
                        </div>
                    </form>
                </div>
            }
        }
    </div>
</div>